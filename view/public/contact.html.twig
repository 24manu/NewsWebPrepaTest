{% extends 'public/public.template.html.twig' %}

{% block title %}{{ parent() }} Nous contacter {% endblock %}

{% block pagetype %}contact{% endblock %}

{% block logo %}<div id="logo">
    <h1>News <span id="iisrt"><span id="ii">II</span>  <span id="srt">WEB</span></span></h1>
    <div id="tagline">
        <h2>Nous contacter</h2>
    </div>
</div>{% endblock %}
{% block nav %}<nav class="topnav" id="topnav">
    <ul>
        <li id="menu">
            <a href="javascript:void(0);" class="icon" onclick="hamburger()">MENU <i class="fa fa-bars"></i></a>
        </li>
        <li><a href="./" id="homenav">Accueil</a></li>
        <li><a href="./?blog" id="blognav">Les articles</a></li>
        <li><a href="./?contact" id="contact">Contact</a></li>
        <li><a href="./?connect" id="admin">Admin</a></li>
    </ul>
</nav>{% endblock %}
{% block main %}<section>
    <div id="line">
        <div class="dline"></div>
        <h1>Nous contacter</h1>
        <div class="dline"></div>
    </div>

        <div id="contactpost">
            <h1>Contact Us</h1>
            <p>Below is an example of how a contact form might look with this template:</p>
            <form method="post" action="#">
                <div id="contactform">
                    <p><label for="name">Name</label><input type="user" name="name" id="name" placeholder="your name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'your name'" /></p>
                    <p><label for="email">Email</label><input type="email" name="email" id="email" placeholder="your@email.com" onfocus="this.placeholder = ''" onblur="this.placeholder = 'your@email.com'" /></p>
                    <p><label for="message">Message</label><textarea name="message" id="message"></textarea></p>
                    <p style="padding-top: 105px"><span>&nbsp;</span><input class="submit" type="submit" name="contact_submitted" value="submit" /></p>
                </div>
            </form>
            &nbsp;
            <p>NOTE: A contact form such as this would require some way of emailing the input<br />
                to an email address.</p>
        </div>

</section>{% endblock %}
